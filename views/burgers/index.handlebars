<h1>Burgers</h1>

  <h2>Add a Burger</h2>

  <form class="create-update-form" action="burgers/create" method="POST">

    <div class="form-group">
      <label for="bu">Burger Name:</label>
      <input type="text" id="ca" name="name">
    </div>

    <div class="form-group">
      <label for="devour">Devoured?</label><br>
      <input type="radio" name="devour" value="1" checked> Devoured!<br>
      <input type="radio" name="devour" value="0" checked> Not Devoured
    </div>

    <button type="submit">Add Burger</button>
  </form>

